---
const links = [
  { title: 'Home', path: '/#' },
  { title: 'About me', path: '/#end-home' },
  { title: 'Technologies', path: '/#end-about-me' },
  { title: 'Last Project', path: '/#end-technologies' },
  { title: 'Projects List', path: '/projects' },
  { title: 'Contact', path: '/#end-last-project' },
]
---

<nav>
  <ul>
    {
      links.map(({ title, path }) => (
        <li>
          <a href={path}>{title}</a>
        </li>
      ))
    }
  </ul>
</nav>

<style lang='scss'>
  nav {
    opacity: 0;
    visibility: hidden;
    position: fixed;
    inset: 0;
    width: 100%;
    z-index: -1;
    isolation: isolate;
    ul {
      list-style: none;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding-top: 6rem;
      width: 100%;
      gap: 2rem;

      li {
        a {
          color: var(--color-text);
          font-size: 1.5rem;
          text-decoration: none;
          transition: color 0.2s ease-in-out;
          &:hover {
            color: var(--color-tertiary);
          }
        }
      }
    }

    &.open {
      padding-top: 5rem;
      visibility: visible;
      opacity: 1;
      transition: visibility 0.3s ease-in-out, opacity 0.3s ease-in-out;
      background: var(--color-background);
      height: 100vh;
      backdrop-filter: blur(10px);
    }

    @media (min-width: 769px) {
      opacity: 1;
      visibility: visible;
      display: flex;
      position: static;
      height: 5rem;

      ul {
        flex-direction: row;
        padding: 0 2rem;
        gap: 1rem;
        li {
          a {
            font-size: 1rem;
            font-family: var(--font-general);
          }
        }
      }
    }
  }
</style>
