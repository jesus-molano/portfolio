<button
  name='burger menu'
  class='burgerMenu'
  aria-controls="primary-navigation"
  aria-expanded="false"
  role='button'
  aria-label='burger menu'
>
  <svg
    class="hamburger"
    width='32'
    height='32'
    viewBox='0 0 100 100'
    fill='var(--burgerMenu-color)'
    xmlns='http://www.w3.org/2000/svg'
  >
    <rect class="line top" width='80' height='10' x='10' y='25' rx='5'/>
    <rect class="line middle" width='80' height='10' x='10' y='45' rx='5'/>
    <rect class="line bottom" width='80' height='10' x='10' y='65' rx='5'/>
  </svg>
</button>

<style lang='scss'>
  .burgerMenu {
    --burgerMenu-color: var(--color-text);
    background: none;
    border: none;
    cursor: pointer;
    display: block;
    height: 100%;
    padding: 0;
    position: absolute;
    right: 0;
    top: 0;
    width: 5rem;

      .line{
        transition: 
          y 0.3s ease-in 0.3s,
          transform 0.3s ease-in,
          opacity 0s 0.3s;
        transform-origin: center;

      }
      &.active .line{
        transition: 
          y 0.3s ease-in,
          transform 0.3s ease-in 0.3s,
          opacity 0s 0.3s,
          fill 0.3s 0.3s;

        fill: var(--color-secondary);
      }
    

      &.active :is(.top, .bottom){
        y:45px;
      }
      &.active .top {
        transform: rotate(45deg);
      }
      &.active .middle {
        opacity: 0;
      }
      &.active .bottom {
        transform: rotate(-45deg);
      }
    
    @media (min-width: 769px) {
      display: none;
    }
  }
</style>
