---
import linkedinIcon from '/images/linkedin.svg'
import githubIcon from '/images/github.svg'
import twitterIcon from '/images/twitter.svg'


interface Props{
  direction?: 'row' | 'column',
  width?: string,
}

const { direction = 'row', width = '100%'} = Astro.props

const socials = [
  {
    name: 'linkedin',
    url: 'https://www.linkedin.com/in/jesus-molano-perdomo/',
    icon: linkedinIcon,
  },
  {
    name: 'github',
    url: 'https://github.com/jesus-molano',
    icon: githubIcon,
  },
  {
    name: 'twitter',
    url: 'https://twitter.com/JessMolano5',
    icon: twitterIcon,
  },
]
---
<div class="social_networts">
 <ul>
  {
    socials.map(({name, url, icon}) => (
      <li>
        <a href={url} target="_blank" rel="noopener noreferrer">
          <img src={icon} alt={name} loading="lazy" />
        </a>
      </li>
    ))
  }
 </ul>
</div>

<style lang="scss" define:vars={{direction}, {width}}>
  .social_networts {
    ul {
      display: flex;
      justify-content: center;
      align-items: center;
      list-style: none;
      flex-direction: var(--direction);
      gap: 1rem;
      li {
        a {
          padding: 0.1rem;
          display: flex;
          justify-content: center;
          align-items: center;
          img {
            width: var(--width);
            height: 100%;
          }
        }
      }
    }
  }
</style>