---
interface Props {
  image: string
  alt: string
}

const { image, alt } = Astro.props
---

<div class='about-card'>
  <p class='about-description'>
    <slot />
  </p>
  <img class='about-img' loading='lazy' src={image} alt={alt} />
</div>

<style lang='scss'>
  .about-card {
    display: flex;
    flex-direction: column;
    margin-bottom: 4rem;
    gap: 1rem;

    img {
      align-self: center;
    }

    &:nth-child(2) {
      img {
        width: 10rem;
        height: 100%;
        object-fit: cover;
        rotate: 25deg;
      }
    }

    &:nth-child(3) {
      img {
        width: min(20rem, 100%);
        height: 100%;
        object-fit: cover;
      }
    }

    &:nth-child(4) {
      img {
        width: 6rem;
        height: 100%;
        object-fit: cover;
      }
    }
  }
</style>
