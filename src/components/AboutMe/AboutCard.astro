---
export interface Props {
  text: string
  url: string
  alt: string
}
const { text, url, alt } = Astro.props
const { default: aboutImg } = await import(url)
---

<div class='about-card'>
  <p class='about-description'>{text}</p>
  <img class='about-img' src={aboutImg} alt={alt} />
</div>

<style lang='scss'>
  .about-card {
    display: flex;
    flex-direction: column;
    margin-bottom: 4rem;
    gap: 1rem;

    img{
      align-self: center;
    }

    &:nth-child(2) {
      img {
        width: 12rem;
        height: 100%;
        object-fit: cover;
      }
    }

    &:nth-child(3) {
      img {
        width: min(20rem, 100%);
        height: 100%;
        object-fit: cover;
      }
    }

    &:nth-child(4) {
      img {
        width: 8rem;
        height: 100%;
        object-fit: cover;
      }
    }
  }
</style>
