---
import Spinner from '@components/Spinner.astro';
import BaseLayout from '@layouts/BaseLayout.astro'
---

<BaseLayout title='Page not found'>
  <Spinner />
  <section>
    <div class='grogu'>
      <img src='/images/grogu_500x250.webp' alt='yoda 404' />
      <h1>404</h1>
    </div>
    <p>This is NOT the way</p>
    <a href='/'>{'<'}Go Home</a>
  </section>
</BaseLayout>

<style lang='scss'>
  section {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;

    .grogu {
      h1 {
        color: var(--color-secondary);
        text-align: center;
        font-size: 3rem;
        font-weight: bold;
        background-color: #050d13;
        border-radius: 5px 5px 60px 60px;
        box-shadow: #2b3953 0 0 15px;
      }

      img {
        display: block;
        margin: 0 auto;
        height: auto;
        width: 150px;
        filter: drop-shadow(0 0 0.75rem #2b3953);
        -webkit-filter: drop-shadow(0 0 0.75rem #2b3953);
      }
    }
    p {
      text-align: center;
      font-size: 1.5rem;
      font-weight: 900;
    }
    a {
      margin-top: 2rem;
      color: var(--color-primary);
      text-decoration: none;
      font-weight: 900;
    }
  }
</style>
