---
import type { ProjectFrontmatter } from '@types'
import ProjectsListLayout from '@layouts/ProjectsListLayout.astro';
import {ProjectsList} from '@components/ProjectsList/index';
import Spinner from '@components/Spinner.astro';

let projects = await Astro.glob<ProjectFrontmatter>('./*.md')
---

<ProjectsListLayout title="Projects" >
  <Spinner />
  <ProjectsList projects={projects} client:load/>
</ProjectsListLayout>
