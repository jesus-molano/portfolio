---
import GoBack from '@components/GoBack.astro'
import BaseLayout from './BaseLayout.astro'

interface Props {
  title: string
}

const { title, goBack } = Astro.props
---

<BaseLayout title={title}>
  <section>
    <GoBack />
    <h1>{title}</h1>
    <slot />
  </section>
</BaseLayout>

<style lang='scss'>
  section {
    flex: 1;
    padding: 1rem;
    h1 {
      padding: 1rem 0;
    }
    @media (min-width: 769px) {
      padding: 2rem;
    }
    @media (min-width: 1025px) {
      padding-inline: 5rem;
    }
  }
</style>
