---
import SectionTitle from '@components/SectionTitle.astro'
interface Props {
  title?: string
  sableColor?: string
  id: string
}

const { title = '', sableColor = '', id } = Astro.props
---

<section id={id}>
  <div class='container'>
    {sableColor && <SectionTitle title={title} color={sableColor} />}
    <slot />
  </div>
</section>

<style lang='scss'>
  section {
    position: relative;
    min-width: 100%;
    display: flex;
    min-height: 500px;
    flex-direction: column;
    padding: 2rem 0;
    gap: 1rem;

    .container {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      justify-content: center;
      width: (600px, 100%);
      height: 100%;
      padding: 2rem 1rem;
      z-index: 1;
    }
    @media (min-width: 769px) {
      .container {
        padding-inline: 2rem;
      }
    }
    @media (min-width: 1025px) {
      .container {
        padding-inline: 5rem;
      }
    }
    @media (min-width: 1440px) {
      .container {
        width: 100%;
      }
    }

    &:nth-child(even)::after {
      content: '';
      background-color: var(--color-bg-soft);
      position: absolute;
      inset: 0;
      transform: skewY(3deg);
      isolation: isolate;

      @media (min-width: 1440px) {
        display: none;
        -webkit-mask-image: linear-gradient(
          to right,
          transparent,
          black 20%,
          black 80%,
          transparent
        );
        mask-image: linear-gradient(
          to right,
          transparent,
          black 50%,
          black 50%,
          transparent
        );
      }
    }
  }
</style>
