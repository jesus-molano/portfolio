---
import SectionTitle from '@components/SectionTitle.astro'

interface Props {
  title?: string
  sableColor?: string
}

const { title = '', sableColor = '' } = Astro.props
// replace spaces with dashes
const endSection = `end-${title.replace(/\s/g, '-')}`.toLowerCase()
---

<section>
  <div class='container'>
    {sableColor && <SectionTitle title={title} color={sableColor} />}
    <slot />
  </div>
</section>
<div class='end-section' id={endSection}></div>

<style lang='scss'>
  section {
    min-width: 100%;
    display: flex;
    min-height: 500px;
    flex-direction: column;
    gap: 1rem;

    .container {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      justify-content: center;
      width: (600px, 100%);
      padding: 1rem;
    }
    @media (min-width: 769px) {
      .container {
        padding: 2rem;
      }
    }
    @media (min-width: 1025px) {
      .container {
        padding-inline: 5rem;
      }
    }
    @media (min-width: 1440px) {
      .container {
        width: 100%;
      }
    }
  }
  .end-section {
    height: 5rem;
  }
</style>
