---
import type { MarkdownLayoutProps } from 'astro'
import type { ProjectFrontmatter } from '@types'
import BaseLayout from './BaseLayout.astro'
import { formatDate } from '@utils'
import GoBack from '@components/GoBack.astro'

type Props = MarkdownLayoutProps<ProjectFrontmatter>

const { title, date, tags, draft } = Astro.props.frontmatter
---

<BaseLayout title='Project'>
  <section class='project-detail'>
    <GoBack  />
    {
    tags && 
      <div class="tags">
        {tags.map(tag => (<a href={`/projects/tag/${tag.toLocaleLowerCase()}`}>{tag}</a>))}
      </div>
    }
    <div class='title'>
      <h1>{title}</h1>
      {draft && <span>DRAFT</span>}
      <small>{formatDate(date)}</small>
    </div>
    <slot />
  </section>
</BaseLayout>

<style lang='scss' is:global>
  .project-detail {
    padding: 1rem;
    background: radial-gradient(
      62.89% 49.17% at 50% 50%,
      #182235 0%,
      #040a0e 100%
    );

    .tags{
      margin-top: 1rem;
      display: flex;
      align-items: center;
      justify-content: end;
      gap: 0.5rem;
      flex-wrap: wrap;

      a {
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        border-radius: 8px;
        color: var(--color-text);
        text-transform: uppercase;
        font-weight: 900;
        font-size: 0.75rem;
        text-align: center;
        text-decoration: none;
        background-color: #182235;
        padding: 0.25rem 0.50rem;
        transition: background-color 0.2s ease;

        &:hover,
        &:focus {
          background-color: var(--color-secondary);
        }
      }
    }

    .title {
      margin: 1rem 0;
      h1 {
        font-size: 2rem;
      }
      small {
        color: #a9aaad;
        font-weight: 900;
        text-align: end;
      }
      span {
        color: var(--color-text);
        background-color: var(--color-secondary);
        padding: 0.25rem 0.5rem;
        border-radius: 0.25rem;
        font-size: 0.75rem;
        font-weight: 600;
      }
    }

    h2 {
      margin-bottom: 1rem;
    }

    p {
      margin-bottom: 1rem;
      display: grid;

      &:has(a) {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 2rem;

        a {
          color: var(--color-secondary);
          font-weight: 900;
          text-decoration: underline;
          text-align: center;
        }
      }
      img {
        justify-self: center;
        width: min(52.25rem, 100%);
        height: auto;
        object-fit: cover;
        object-position: top;
        border-radius: 8px;
        box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.25);
      }
    }
    a {
      color: var(--color-primary);
      text-decoration: none;
    }

    ul {
      margin-bottom: 1rem;
      padding-left: 1.5rem;
    }
  }
</style>
