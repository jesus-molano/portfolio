---
import BaseLayout from './BaseLayout.astro'

const { title, tags } = Astro.props.frontmatter
---

<BaseLayout title='Project'>
  <section class='project-detail'>
    <a href='/projects'>‚Üê Back to projects</a>
    <h1>{title}</h1>
    <slot />
  </section>
</BaseLayout>

<style lang='scss' is:global>
  .project-detail {
    padding: 1rem;
    background: radial-gradient(
      62.89% 49.17% at 50% 50%,
      #182235 0%,
      #040a0e 100%
    );

    h1 {
      font-size: 2rem;
      margin-block: 1rem;
    }

    h2 {
      margin-bottom: 1rem;
    }

    p {
      margin-bottom: 1rem;
      
      &:has(a){
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 2rem;

        a{
          color: var(--color-secondary);
          font-weight: 900;
          text-decoration: underline;
          text-align: center;
        }
      }
    }
    img {
      width: min(52.25rem, 100%);
      height: auto;
      object-fit: cover;
      object-position: top;
      border-radius: 8px;
      box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.25);
    }
    a {
      color: var(--color-primary);
      text-decoration: none;
    }

    ul {
      margin-bottom: 1rem;
      padding-left: 1.5rem;
    }
  }
</style>
